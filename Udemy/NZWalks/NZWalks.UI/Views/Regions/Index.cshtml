@model IEnumerable<NZWalks.UI.Models.DTO.RegionDto>
@{
}

<h1>@ViewBag.Title</h1>

<div class="mb-2">
	<a class="btn btn-dark" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>ID</th>
			<th>Code</th>
			<th>Name</th>
			<th>Feature</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Code</td>
				<td>@item.Name</td>
				<td class="d-flex justify-content-between">
					<a class="btn btn-secondary" asp-controller="Regions" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
					<form asp-controller="Regions" asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this region?');">
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>